<turbo-frame id="registrations">
    <% if registrations.present? %>
      <table class="registrations-table">
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Birthday</th>
            <th>Gender</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Subject</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% registrations.each do |registration| %>
            <tr>
              <td><%= registration.firstName %></td>
              <td><%= registration.lastName %></td>
              <td><%= registration.birthday %></td>
              <td><%= registration.gender %></td>
              <td><%= registration.email %></td>
              <td><%= registration.phone %></td>
              <td><%= registration.subject %></td>
              <td id="actions-row">
                <%= button_to 'Delete', confirm_delete_registration_path(registration), method: :patch, class: 'delete-button' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="no-registrations-message">No registrations found.</p>
    <% end %>
  </turbo-frame>